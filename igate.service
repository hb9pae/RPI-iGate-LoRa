[Unit]
Description=LoRa APRS iGate service
After=multi-user.target

[Service]
Type=simple
Restart=always
User=pi
Group=pi
WorkingDirectory=/home/pi/RPI-iGate-LoRa
VIRTUAL_ENV=/opt/lorapy/env
Environment=PATH=$VIRTUAL_ENV/bin;$PATH
ExecStart= source /opt/lorapy/env/bin/python /home/pi/RPI-iGate-LoRa/IGate.py

[Install]
WantedBy=multi-user.target
